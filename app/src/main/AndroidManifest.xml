<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dk.blackdarkness.gg">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".gallowgame.UI.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gallowgame.UI.GameActivity"
            android:launchMode="singleInstance"
            android:label="Game"
            android:theme="@style/AppTheme" />
        <activity android:name=".gallowgame.UI.HighscoresActivity" />
        <activity
            android:name=".gallowgame.UI.AddHighscoreActivity"
            android:launchMode="singleInstance"
            android:label="Save Highscore"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".gallowgame.UI.CreditsActivity"
            android:launchMode="singleInstance"
            android:label="Credits"
            android:theme="@style/AppTheme" />
    </application>

</manifest>