<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp">

    <ProgressBar
        android:id="@+id/hs_loadingSpinner"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hs_loadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Fetching data from server..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hs_loadingSpinner" />

    <TextView
        android:id="@+id/hsId_desc"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID:"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/hsId_val"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13.00"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toTopOf="@id/hsId_desc"
        app:layout_constraintStart_toEndOf="@id/hsGuessedLetters_desc" />

    <TextView
        android:id="@+id/hsName_desc"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        app:layout_constraintTop_toBottomOf="@+id/hsId_desc"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/hsName_val"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anders"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toTopOf="@id/hsName_desc"
        app:layout_constraintStart_toEndOf="@id/hsGuessedLetters_desc" />

    <TextView
        android:id="@+id/hsWord_desc"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Word:"
        app:layout_constraintTop_toBottomOf="@+id/hsName_desc"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/hsWord_val"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="connection"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toTopOf="@id/hsWord_desc"
        app:layout_constraintStart_toEndOf="@id/hsGuessedLetters_desc" />

    <TextView
        android:id="@+id/hsGuessedLetters_desc"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guessed letters:"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/hsWord_desc"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/hsGuessedLetters_val"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contie"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toTopOf="@id/hsGuessedLetters_desc"
        app:layout_constraintStart_toEndOf="@id/hsGuessedLetters_desc" />

    <TextView
        android:id="@+id/hsScore_desc"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score:"
        app:layout_constraintTop_toBottomOf="@+id/hsGuessedLetters_desc"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/hsScore_val"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14.00"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toTopOf="@id/hsScore_desc"
        app:layout_constraintStart_toEndOf="@id/hsGuessedLetters_desc" />
</android.support.constraint.ConstraintLayout>
